                    android:text="M"
                    android:clickable="false"
                    android:id="@+id/U9"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_margin="2dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
